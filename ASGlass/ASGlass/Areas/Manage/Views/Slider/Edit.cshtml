@model Slider
@{
    ViewData["Title"] = "Edit";
}

<div class="container-fluid mt-5">
    <div class="col-12">

        <h1>Düzəliş Et</h1>
        <form method="post" enctype="multipart/form-data">
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label asp-for="Title">Başlıq</label>
                    <input asp-for="Title" class="form-control" placeholder="Title" style="background-color: #295484; color: white;">
                    <span class="text-danger" asp-validation-for="Title"></span>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label asp-for="SubTitle">Alt Yazı</label>
                    <input asp-for="SubTitle" class="form-control" placeholder="SubTitle" style="background-color: #295484; color: white;">
                    <span class="text-danger" asp-validation-for="SubTitle"></span>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-4">
                    <label asp-for="Order">Sıra</label>
                    <input asp-for="Order" class="form-control" placeholder="Order" style="background-color: #295484; color: white;">
                    <span class="text-danger" asp-validation-for="Order"></span>
                </div>
                <div class="form-group col-md-4">
                    <label asp-for="RedirectUrl">RedirectUrl</label>
                    <input asp-for="RedirectUrl" class="form-control" placeholder="RedirectUrl" style="background-color: #295484; color: white;">
                    <span class="text-danger" asp-validation-for="RedirectUrl"></span>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-4">
                    <label asp-for="PosterFile">ImageFile</label>
                    <input asp-for="PosterFile" class="form-control" placeholder="ImageFile">
                    <span class="text-danger" asp-validation-for="PosterFile"></span>
                </div>
            </div>

            <div class="img-box" style="display: inline-block; position: relative;">
                <input type="hidden" name="Image" value="@Model.Image" style="background-color: #295484; color: white;"/>
                <img style="max-width:300px" src="~/uploads/slider/@Model.Image" alt="Alternate Text" />
                <span class="remove-img-box" style="position: absolute; top: -10px; right: -5px; cursor:pointer">
                    <i class="fa fa-times" style="color: red; font-size: 24px;"></i>
                </span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Düzəliş Et</button>
            </div>

        </form>
    </div>
</div>
