@model About
@{
    ViewBag.Title = "edit";
}
<div class="panel-header panel-header-sm">
</div>
<div class="content mt-5">
    <div class="col-12">
        <h1>Edit</h1>
        <form method="post" enctype="multipart/form-data">
            <div class="form-group">
                <label asp-for="Title">Title</label>
                <input asp-for="Title" class="form-control" placeholder="FullName">
                <span class="text-danger" asp-validation-for="Title"></span>
            </div>
            <div class="form-row">
                <div class="form-group col-md-4">
                    <label asp-for="PosterFile">ImageFile</label>
                    <input asp-for="PosterFile" class="form-control" placeholder="ImageFile">
                    <span class="text-danger" asp-validation-for="PosterFile"></span>
                </div>
            </div>

            <div class="img-box" style="display: inline-block; position: relative;">
                <input type="hidden" name="Image" value="@Model.Image" style="background-color: #295484; color: white;" />
                <img style="max-width:300px" src="~/uploads/aboutus/@Model.Image" alt="Alternate Text" />
                <span class="remove-img-box" style="position: absolute; top: -10px; right: -5px; cursor:pointer">
                    <i class="fa fa-times" style="color: red; font-size: 24px;"></i>
                </span>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary">Edit</button>
            </div>

        </form>
    </div>
</div>
