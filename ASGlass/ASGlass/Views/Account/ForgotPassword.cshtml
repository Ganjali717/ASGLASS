@model ForgotPasswordViewModel

<section class="p-5 mb-5 col-6 m-auto text-center">
    <div class="container">
        <h1>Şifrənizi Unutmusunuz?</h1>
        <br />
        <div class="row">
            <div class="col-12">
                <form asp-action="ForgotPassword">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Email" class="control-label">Email adresinizi daxil edin</label>
                        <br /><br />
                        <input asp-for="Email" class="form-control shadow-none" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <br />
                    <div class="form-group">
                        <input type="submit" value="Davam Et" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>

