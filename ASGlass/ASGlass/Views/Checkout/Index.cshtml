<main id="checkout">
    <div class="container">

        <div class="column">
            <div class="checkout-head">
                <img src="~/assets/images/logo/asglasslogosu.png" />
                <ul>
                    <li class="active"><a href="">ALIŞ-VERİŞ</a></li>
                    <li><a href="">ÖDƏNİŞ</a></li>
                    <li><a href="">QAİMƏ</a></li>
                </ul>
            </div>
            <div class="checkout-body">
                <div class="checkout-left col-12">
                    <h4 class="text-center">ALIŞ-VERİŞ ÜÇÜN MƏLUMAT ANKETİNİ DOLDURUN</h4>
                    <br>
                    <form action="" method="post">

                        <div class="row col-12">
                            <div class="form-item col-12">
                                <label for="">Ad və Soyad  *</label>
                                <br>
                                <input type="text" placeholder="Ad və Soyadı daxil edin" name="fullname" required>
                            </div>
                        </div>
                        <div class="row col-12">
                            <div class="form-item col-12">
                                <label for="">Ünvan *</label>
                                <br>
                                <input type="text" placeholder="Ünvan daxil edin" required>
                            </div>
                        </div>
                        <div class="row col-12">
                            <div class="form-item col-12">
                                <label for="">Şəhər seçin*</label>
                                <br>
                                <select name="" id="" required>
                                    <option value="" selected>Baki</option>
                                    <option value="">Sumqayit</option>
                                    <option value="">Quba</option>
                                    <option value="">Gence</option>
                                </select>
                            </div>
                        </div>
                        <div class="row col-12">
                            <div class="form-item col-6">
                                <label for="">ZIP *</label>
                                <br>
                                <input type="text" placeholder="Enter First Name" required>
                            </div>
                            <div class="form-item col-6">
                                <label for="">Şirkət Adı </label>
                                <br>
                                <input type="text" placeholder="Şirkət adını daxil edin">
                            </div>
                        </div>
                        <div class="row col-12">
                            <div class="form-item col-6">
                                <label for="email">Email</label>
                                <br>
                                <input type="email" placeholder="Enter email" name="email" required>
                            </div>
                            <div class="form-item col-6">
                                <label for="">Əlaqə nömrəsi</label>
                                <br>
                                <input type="tel" placeholder="+994 50 *** ** **" required>
                            </div>
                        </div>
                        <br />
                        <input type="submit" asp-action="checkout" value="Ödəniş Üçün Davam Edin">
                    </form>
                </div>
